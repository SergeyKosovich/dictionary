{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "airbnb", 
        "airbnb/hooks"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
       "linebreak-style": 0,
       "default-param-last": "off",
       "react/prop-types": 0,
       "arrow-body-style": 0,
       "jsx-quotes": [2, "prefer-single"],
       "react/function-component-definition": [
        2,
        {
          "namedComponents": ["arrow-function", "function-declaration", "function-expression"]
        }
      ]
    }
}
